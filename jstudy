#!/usr/bin/env ruby

require_relative 'lib/environment'
require_relative 'lib/parse_arguments'

command = ARGV[0]
options = ParseArguments.parse

if command == "search"
 puts "What do you want to search for?"
 input = $stdin.gets #this is just a 'gets'
 result_of_search = Words.search(input)
 puts "You asked for: #{result_of_search}"
end

if command == "add"
 error_messages = ParseArguments.validate(options)
 if error_messages.empty?
  new_word_record = Words.create(options)
  puts new_word_record
 else
  puts error_messages
 end
end

if command == "start"
 puts "
   ______________________________________________________________
  | ___________________________________________________________  |
  | |   _______     ______   _______ __   __  ______  __    __ | |
  | |  |__   __|   /  ___ \\ |__  ___|| |  | | | ___ \\ \\ \\  / / | |
  | |     | |      | |   \\_|   | |   | |  | | | |  | | \\ \\/ /  | |
  | |     | |  __  |  \\___     | |   | |  | | | |  | |  \\  /   | |
  | |  _  | | |__|  \\___  \\    | |   | |  | | | |  | |   | |   | |
  | | | | | |       _   \\  |   | |   | |  | | | |  | |   | |   | |
  | | | |_| |      | |__/  |   | |   | |__| | | |__/ |   | |   | |
  | | \\_____/      \\______/    |_|   \\______/ |_____/    |_|   | |
  | |__________________________________________________________| |
  |                                                              |
  |  * * * * * * * * * * *    へようこそ   * * * * * * * * * * * |
  |______________________________________________________________|

"
end
